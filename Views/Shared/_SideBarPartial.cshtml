
<div class="offcanvas offcanvas-start bg-white" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1" id="offcanvasScrolling" aria-labelledby="offcanvasScrollingLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasScrollingLabel">Your Saved Pallets</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div id="SavedOffCanvas" class="offcanvas-body">
        @if (Model != null) { 
            foreach (var item in Model)
            {
                string[] theColors = item.Pallet.Split('|');
                <div class="smallPallet mb-3">
                
                    <div class="row">
                        <div class="col-6">
                            @if (item.Name == null)
                            {
                                <a href="/ColorPallets/Index/@item.Id" class="text-dark">Unnamed</a>
                            }
                            else
                            {
                                <a href="/ColorPallets/Index/@item.Id" class="text-dark">@item.Name</a>
                            }
                        </div>
                        <div class="col-6 text-end">
                            <a href="#" class="text-end text-darkest" onclick="DeletePallet('@item.Id')"><i class="bi bi-trash2"></i></a>
                        </div>
    
                    </div>
                    <div class="row" id="@item.Id">
                        @foreach (var color in theColors)
                        {
                            <div class="col smallColor border border-2 border-darkest" style="background-color: @color;">

                            </div>
                        }
                    </div>
              
                </div>
            }
         }
        else
            {
                <div><h1>Please Login or Create a Free Account to Save Pallets.</h1></div>
            }
    </div>
</div>
